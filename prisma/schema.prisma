generator client {
  provider = "prisma-client"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// --- PRODUCT MODEL ---
model Product {
  id           String   @id @default(cuid())
  sku          String   @unique
  name         String
  description  String?
  costPrice    Int?
  sellingPrice Int?
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt

  category   Category? @relation(fields: [categoryId], references: [id])
  categoryId String?

  @@map("products")
}

// --- CATEGORY MODEL ---
model Category {
  id          String  @id @default(cuid())
  name        String
  description String?

  products Product[]
}
